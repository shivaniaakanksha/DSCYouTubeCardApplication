        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
