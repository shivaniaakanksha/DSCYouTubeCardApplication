                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="casual"
                        android:text="excellent"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/user1"
                        android:text="two days ago"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/commentup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/comment1"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ic_thumb_up_black_24dp" />

                    <ImageView
                        android:id="@+id/commentdown1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/comment1"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/commentup1"
                        android:src="@drawable/ic_thumb_down_black_24dp"


                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/comment1"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@id/commentdown1"
                        android:text="REPLY"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
